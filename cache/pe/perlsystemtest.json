{"_id": "527c033ab9363c3675fc948c", "categories": {"audience": [{"fullname": "Quality Engineers", "fullpath": "Intended Audience :: by End-User Class :: Quality Engineers", "id": 537, "shortname": "enduser_qa"}], "database": [], "developmentstatus": [{"fullname": "4 - Beta", "fullpath": "Development Status :: 4 - Beta", "id": 10, "shortname": "beta"}], "environment": [{"fullname": "Command-line", "fullpath": "User Interface :: Textual :: Command-line", "id": 459, "shortname": "ui_commandline"}], "language": [{"fullname": "Perl", "fullpath": "Programming Language :: Perl", "id": 176, "shortname": "perl"}], "license": [], "os": [{"fullname": "All POSIX (Linux/BSD/UNIX-like OSes)", "fullpath": "Operating System :: Grouping and Descriptive Categories :: All POSIX (Linux/BSD/UNIX-like OSes)", "id": 200, "shortname": "posix"}], "topic": [{"fullname": "Testing", "fullpath": "Topic :: Software Development :: Testing", "id": 575, "shortname": "testing"}], "translation": []}, "creation_date": "2013-11-07", "developers": [{"name": "Todd Shoenfelt", "url": "http://sourceforge.net/u/tshoenfelt/", "username": "tshoenfelt"}, {"name": "aisarosenbaum", "url": "http://sourceforge.net/u/aisarosenbaum/", "username": "aisarosenbaum"}], "external_homepage": null, "icon_url": "http://sourceforge.net/p/perlsystemtest/icon", "labels": ["Software System Test Harness Perl"], "moved_to_url": "", "name": "Perl System Test", "preferred_support_tool": "wiki", "preferred_support_url": "", "private": false, "screenshots": [{"caption": "Harness Output", "thumbnail_url": "http://sourceforge.net/p/perlsystemtest/screenshot/harness.log.png/thumb", "url": "http://sourceforge.net/p/perlsystemtest/screenshot/harness.log.png"}, {"caption": "Process Meta Log", "thumbnail_url": "http://sourceforge.net/p/perlsystemtest/screenshot/meta.log.png/thumb", "url": "http://sourceforge.net/p/perlsystemtest/screenshot/meta.log.png"}], "short_description": "Perl System Test (PEST) is a test harness, written in Perl, for running processes on a distributed testbed via SSH.  Test processes are defined in a simple config file for execution on remote hosts, enabling a tester to run tests in serially or in parallel.  Processes are as non-blocking and un-buffered as possible.  The harness redirects process output to an individual log for each process and logs process metadata.  It captures the return code of each remote process and interprets 0 as pass and everything else as fail, enabling it to run tests written in any language.  The harness depends on a standard testbed descriptor to facilitate portability across testbeds.\r\n\r\nRead more on the project Wiki:\r\nhttps://sourceforge.net/p/perlsystemtest/wiki/Home/", "shortname": "perlsystemtest", "socialnetworks": [{"accounturl": "", "socialnetwork": "Twitter"}, {"accounturl": null, "socialnetwork": "Facebook"}], "status": "active", "summary": "(PEST)", "tools": [{"label": "Files", "mount_point": "files", "name": "files"}, {"label": "Summary", "mount_point": "summary", "name": "summary", "sourceforge_group_id": 2001207}, {"label": "Reviews", "mount_point": "reviews", "name": "reviews"}, {"label": "Support", "mount_point": "support", "name": "support"}, {"label": "Wiki", "mount_point": "wiki", "name": "wiki"}, {"label": "Tickets", "mount_point": "tickets", "name": "tickets"}, {"label": "Code", "mount_point": "code", "name": "svn"}, {"label": "Activity", "mount_point": "activity", "name": "activity"}], "url": "http://sourceforge.net/p/perlsystemtest/", "video_url": ""}
