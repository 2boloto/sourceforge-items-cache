orks": [], "status": "active", "summary": "tool for training vocabulary", "tools": [{"label": "Files", "mount_point": "downloads", "name": "files"}, {"label": "Wiki", "mount_point": "wiki", "name": "wiki"}, {"label": "Code", "mount_point": "code", "name": "git"}, {"label": "Discussion", "mount_point": "discussion", "name": "discussion"}, {"label": "Code", "mount_point": "code-0", "name": "svn"}, {"label": "Tickets", "mount_point": "tickets", "name": "tickets"}, {"label": "Summary", "mount_point": "summary", "name": "summary", "sourceforge_group_id": 661922}, {"label": "Reviews", "mount_point": "reviews", "name": "reviews"}, {"label": "Support", "mount_point": "support", "name": "support"}, {"label": "Activity", "mount_point": "activity", "name": "activity"}], "url": "http://sourceforge.net/p/vocabomat/", "video_url": ""}
